// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String @id @unique // matches up with the kinde user id
  email String @unique

  // Define the favorites relationship: a user can have multiple favorite properties
  favorites  PropertyDetails[] @relation("UserFavorites")
  // Define the offers sent relationship: a user can have multiple offers
  offersSent OffersSent[]

  stripeCustomerId       String?     @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?     @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?     @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime?   @map(name: "stripe_current_period_end")
  Favorites              Favorites[]
}

model PropertyDetails {
  id             Int        @id @default(autoincrement())
  image          String
  address        String
  dateSubmitted  String
  offerSubmitted String
  status         EnumStatus // Change this to match your desired data type for status
  cancel         Boolean

  // Define the favorites relationship: a property can be favorited by multiple users
  Favorites User[] @relation("UserFavorites")

  // Add any other fields you need for PropertyDetails

  // Add an index to the userId field for better performance
  // userId         String    @index()

  // Add any relationships or other configurations as needed
  // User   User?   @relation(fields: [userId], references: [id])
}

model OffersSent {
  id             Int        @id @default(autoincrement())
  image          String
  address        String
  dateSubmitted  DateTime   @default(now()) // Time of offer submission
  offerSubmitted String // Offer price defined as string
  status         EnumStatus // Change this to match your desired data type for status
  cancel         Boolean

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([userId])
}

enum EnumStatus {
  Accepted
  Pending
  Denied
}

model Favorites {
  id        Int    @id @default(autoincrement())
  url       String @unique @default(cuid())
  imgSrc    String
  imgWidth  Int
  imgHeight Int
  alt       String
  cn        String
  askPrice  String
  arv       String
  location  String
  beds      Int
  baths     Int
  sqft      Int

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@index([userId])
}
