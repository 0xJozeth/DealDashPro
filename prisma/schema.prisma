generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String @id @unique // matches up with the kinde user id
  email String @unique

  // favorites PropertyDetails[]

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model PropertyDetails {
  id             Int        @id @default(autoincrement())
  image          String
  address        String
  dateSubmitted  String
  offerSubmitted String
  status         EnumStatus // Change this to match your desired data type for status
  cancel         Boolean

  // Add any other fields you need for PropertyDetails

  // Add an index to the userId field for better performance
  // userId         String    @index()

  // Add any relationships or other configurations as needed
  // User   User?   @relation(fields: [userId], references: [id])
}

enum EnumStatus {
  Accepted
  Pending
  Denied
}
