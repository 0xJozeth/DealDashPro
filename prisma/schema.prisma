// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id    String @id @unique // matches up with the kinde user id
  email String @unique

  // Define the favorites relationship: a user can have multiple favorite properties
  favorites PropertyDetails[] @relation("UserFavorites")

  stripeCustomerId       String?   @unique @map(name: "stripe_customer_id")
  stripeSubscriptionId   String?   @unique @map(name: "stripe_subscription_id")
  stripePriceId          String?   @map(name: "stripe_price_id")
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}

model PropertyDetails {
  id             Int        @id @default(autoincrement())
  image          String
  address        String
  dateSubmitted  String
  offerSubmitted String
  status         EnumStatus // Change this to match your desired data type for status
  cancel         Boolean

  // Define the favorites relationship: a property can be favorited by multiple users
  favorites      User[]     @relation("UserFavorites")

  // Add any other fields you need for PropertyDetails

  // Add an index to the userId field for better performance
  // userId         String    @index()

  // Add any relationships or other configurations as needed
  // User   User?   @relation(fields: [userId], references: [id])
}

enum EnumStatus {
  Accepted
  Pending
  Denied
}
